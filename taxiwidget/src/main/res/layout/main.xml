<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="80dp"
    android:layout_width="230dp"
    android:orientation="horizontal"
    android:background="@drawable/background_drawable">
    <LinearLayout
        android:id="@+id/refresh_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/home_view"
                android:text="Fun Taxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="top"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/taxi_info_view"
            android:text="0904990110"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:gravity="top"
            android:textColor="@color/number_color"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/call_view"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:drawableTop="@drawable/ic_phone_call"
        android:gravity="center"
        android:text="@string/call_text"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#a4a4a4"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/call_view"/>

</RelativeLayout>